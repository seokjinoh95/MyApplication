<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textProblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="Question"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editAnswer"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_below="@+id/textProblem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:hint="Input answer" />

    <Button
        android:id="@+id/checkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editAnswer"
        android:layout_marginLeft="50sp"
        android:text="check" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cheat"
        android:id="@+id/cheat"
        android:layout_below="@+id/editAnswer"
        android:layout_toRightOf="@+id/checkBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textProblem"
        android:id="@+id/textAnswer"
        android:text="answer"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skip"
        android:id="@+id/skip"
        android:layout_alignBaseline="@+id/cheat"
        android:layout_alignBottom="@+id/cheat"
        android:layout_toEndOf="@+id/cheat"/>
</RelativeLayout>